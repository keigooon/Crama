<p><%= @teacher.last_name %>先生の報告書一覧</p>
<%= link_to "報告書の作成", new_teacher_report_path %>
<% @reports.each do |report| %>
  <p>
    <%= report.created_at.strftime('%Y/%m/%d') %>：<%= "#{report.student.full_name}" %>
    <%= link_to "授業内容", teacher_report_path(current_teacher,report) %>
    <%= link_to "修正", edit_teacher_report_path(current_teacher,report) %> 
    <%= link_to "削除", teacher_report_path(current_teacher,report), method: :delete, data: { confirm: "本当に削除してもよいですか？"} %>
  </p>
  
<% end %>