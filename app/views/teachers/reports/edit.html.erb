<h1>報告書修正</h1>

<%= form_for(@report, :url => {:controller => :reports, :action => :update}) do |f| %>
  <div>
    <%= f.label :student_id, '生徒を選択' %>
    <%= f.collection_select :student_id, Student.all, :id, :full_name %>
  </div>
  <div>
    <%= f.label :content, '授業内容' %>
    <%= f.text_area :content %>
  </div>
  
  <%= f.submit '修正' %>
<% end %>

<%= link_to '講師ページ', teacher_path(current_teacher) %>
<%= link_to '報告書一覧', teacher_reports_path(current_teacher) %>